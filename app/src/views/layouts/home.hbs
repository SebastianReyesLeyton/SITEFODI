<link rel="stylesheet" href="/css/home.css">

<input type="checkbox" name="" id="nav-toggle">

<div class="sidebar">

    <div class="sidebar-brand">
        <h2>SITEFODI</h2>
    </div>

    <div class="sidebar-menu">
        <ul>
            {{#ifEquals title "Inicio"}}
                {{#if therapist}}
                    <li>
                        <a href="/home/therapist" class="active" id="Inicio"> <span class="fas fa-home"></span>
                        <span>Inicio</span> </a>
                    </li>
                {{else}}
                    <li>
                        <a href="/home/patient" class="active" id="Inicio"> <span class="fas fa-home"></span>
                        <span>Inicio</span> </a>
                    </li>
                {{/if}}
            {{else}}
                {{#if therapist}}
                    <li>
                        <a href="/home/therapist" id="Inicio"> <span class="fas fa-home"></span>
                        <span>Inicio</span> </a>
                    </li>
                {{else}}
                    <li>
                        <a href="/home/patient" id="Inicio"> <span class="fas fa-home"></span>
                        <span>Inicio</span> </a>
                    </li>
                {{/if}}

            {{/ifEquals}}

            {{!-- SHOW PATIENTS OPTION --}}

            {{#if therapist}}
                {{#ifEquals title "Ver Pacientes"}}
                    <li>
                        <a href="/show-patients/therapist" class="active" id="Pacientes"> <span class="fas fa-user-friends"></span> 
                        <span>Ver Pacientes</span> </a>
                    </li>
                {{else}}
                    <li>
                        <a href="/show-patients/therapist" id="Pacientes"> <span class="fas fa-user-friends"></span> 
                        <span>Ver Pacientes</span> </a>
                    </li>

                {{/ifEquals}}
            {{/if}}

            {{!-- REGISTER PATIENTS OPTION --}}

            {{#if therapist}}
                {{#ifEquals title "Registrar Paciente"}}
                    <li>
                        <a href="/register-patient/therapist" id="RegistroPaciente" class='active'> <span class="fas fa-portrait"></span>
                        <span>Registrar Paciente</span> </a>
                    </li>
                {{else}}
                    <li>
                        <a href="/register-patient/therapist" id="RegistroPaciente"> <span class="fas fa-portrait"></span>
                        <span>Registrar Paciente</span> </a>
                    </li>
                {{/ifEquals}}
            {{/if}}

            {{!-- TESTS OPTION --}}

            {{#ifEquals title "Tests"}}
                {{#if therapist}}
                    <li>
                        <a href="/tests/therapist" id="Tests" class="active"> <span class="fas fa-cube"></span>
                        <span>Tests</span> </a>
                    </li>
                {{else}}
                    <li>
                        <a href="/tests/patient" id="Tests" class="active"> <span class="fas fa-cube"></span>
                        <span>Tests</span> </a>
                    </li>
                {{/if}}
            {{else}}
                {{#if therapist}}
                    <li>
                        <a href="/tests/therapist" id="Tests"> <span class="fas fa-cube"></span>
                        <span>Tests</span> </a>
                    </li>
                {{else}}
                    <li>
                        <a href="/tests/patient" id="Tests"> <span class="fas fa-cube"></span>
                        <span>Tests</span> </a>
                    </li>
                {{/if}}
            {{/ifEquals}}

            {{!-- PROFILE OPTION --}}

            {{#ifEquals title "Perfil"}}
                {{#if therapist}}
                    <li>
                        <a href="/profile/therapist" id="Perfil" class="active"> <span class="fas fa-user"></span>
                        <span>Perfil</span> </a>
                    </li>
                {{else}}
                    <li>
                        <a href="/profile/patient" id="Perfil" class="active"> <span class="fas fa-user"></span>
                        <span>Perfil</span> </a>
                    </li>
                {{/if}}
            {{else}}
                {{#if therapist}}
                    <li>
                        <a href="/profile/therapist" id="Perfil"> <span class="fas fa-user"></span>
                        <span>Perfil</span> </a>
                    </li>
                {{else}}
                    <li>
                        <a href="/profile/patient" id="Perfil"> <span class="fas fa-user"></span>
                        <span>Perfil</span> </a>
                    </li>
                {{/if}}
            {{/ifEquals}}
        </ul>
        <ul>
            <li>
                <a href="/signout"> <span class="fas fa-sign-out-alt"></span>
                <span>Salir</span></a>
            </li>
        </ul>
    </div>

</div>

<div class="main-content">

    <header>
        <h2>
            <label for="nav-toggle">
                <span class="fas fa-bars"></span>
            </label> {{title}}
        </h2>

        {{#if search}}
            <div class="search-wrapper">
                <span class="fas fa-search"></span>
                <input type="search" name="" id="" placeholder="Busca aqui" />
            </div>
        {{/if}}

        <div class="user-wrapper">
            <img src={{user.avatar}} width="60px" height="60px"  alt="">
            <div>
                <h4>{{user.name}}</h4>
                {{#if therapist}}
                    <small>Terapeuta</small>
                {{else}}
                    <small>Paciente</small>
                {{/if}}
            </div>
        </div>
        
    </header>

    <main>
        {{#ifEquals title "Perfil"}}
            {{#if therapist}}
                {{> profile-therapist}}
            {{else}}
                {{> profile-patient}}
            {{/if}}
        {{/ifEquals}}

        {{#ifEquals title "Registrar Paciente"}}
            {{> registerPatient}}
        {{/ifEquals}}
    </main>
</div>

<script src="/js/home.js"></script>