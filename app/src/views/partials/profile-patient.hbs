<link rel="stylesheet" href="/css/profile-patient.css">

<div class="container">

    <div class="card">

        <label for="" id="title">Perfil paciente</label>
        <div class="form">

            <div class="card-header">
                <img src={{user.avatar}} alt="">
            </div>

            <div class="card-content">

                <div class="input-class">
                    <label for="">Niño/niña: </label>
                    <input type="text" name="gender" id="gender" value="Niño" disabled>
                </div>

                <div class="input-class">
                    <label for="" class="fullname">Nombre completo:</label>
                    <input type="text" name="fullname" id="fullname" placeholder="">
                </div>

                <div class="input-class">
                    <label for="">Número de documento:</label>
                    <input type="text" name="ti" id="ti" disabled>
                </div>

                <div class="input-class">
                    <label for="">Edad: </label>
                    <input type="text" name="age" id="age" disabled>
                </div>

                <div class="input-class">
                    <label for="">Correo electronico: </label>
                    <input type="email" name="email" id="email" disabled>
                </div>

                <div class="input-class">
                    <label for="">Contraseña: </label>
                    <input type="password" name="passwd" id="passwd" disabled>
                </div>

                <div class="input-class">
                    <label for="">Implante izquierdo: </label>
                    <input type="text" name="leftImplant" id="leftImplant" disabled>
                </div>

                <div class="input-class">
                    <label for="">Implante derecho:</label>
                    <input type="text" name="rightImplant" id="rightImplant" disabled>
                </div>

            </div>
        </div>
    
    </div>

</div>