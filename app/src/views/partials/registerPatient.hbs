<link rel="stylesheet" href="/css/registerPatient.css">

<div class="container">

    <div class="card">
        {{#if err }}
            <div class="error-message">
                <div class="error-content">
                    <span>{{ err }}</span>
                </div>
            </div>
        {{/if}}
        <label for="" id="title">Registro de paciente</label>
        <form action="/users/register-patient" method="POST" class="form" enctype="multipart/form-data">
            
            <div class="card-content">

                <div class="input-class">
                    <label for="">Niño/niña: </label>
                    <select name="gender" id="gender" required>
                        <option value="">--Selecciona--</option>
                        <option value="niño">Niño</option>
                        <option value="niña">Niña</option>
                    </select>
                </div>

                <div class="input-class">
                    <label for="" class="fullname">Nombre y Apellidos:</label>
                    <input type="text" name="fullname" id="fullname" placeholder="Nombre" required>
                </div>

                <div class="input-class">
                    <label for="">Número de documento:</label>
                    <input type="text" name="docNum" id="docNum" placeholder="192341685" required>
                </div>

                <div class="input-class">
                    <label for="">Tipo de documento:</label>
                    <select name="documentType" id="documentType" required>
                        <option value="">--Selecciona--</option>
                        <option value="Tarjeta de Identidad">Tarjeta de Identidad</option>
                        <option value="Registro Civil">Registro Civil</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>

                <div class="input-class">
                    <label for="">Edad: </label>
                    <input type="number" name="age" id="age" min="1" max="16" placeholder="1-16" required>
                </div>

                <div class="input-class">
                    <label for="">Correo electronico: </label>
                    <input type="email" name="email" id="email" required>
                </div>

                <div class="input-class">
                    <label for="">Contraseña: </label>
                    <input type="password" name="passwd" id="passwd" required>
                </div>

                <div class="input-class">
                    <label for="">Ayuda Auditiva OI: </label>
                    <input type="text" name="leftHearingAid" id="leftHearingAid">
                </div>

                <div class="input-class">
                    <label for="">Ayuda Auditiva OD: </label>
                    <input type="text" name="rightHearingAid" id="rightHearingAid">
                </div>

            </div>

            <button type="submit" class="col-6 btn btn-info button-submit">Registrar</button>
        </form>
    
    </div>

</div>